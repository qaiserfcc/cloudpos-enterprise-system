# Development Environment Variables
# Copy this file to .env.local and update with your values

# Application Configuration
NODE_ENV=development
API_VERSION=v1

# Database Configuration - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cloudpos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=cloudpos123

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=cloudpos123
REDIS_DB=0

# MongoDB Configuration
MONGODB_URL=mongodb://admin:cloudpos123@localhost:27017/cloudpos_analytics?authSource=admin
MONGODB_USER=admin
MONGODB_PASSWORD=cloudpos123
MONGODB_DB=cloudpos_analytics

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=12

# Service Ports
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
TRANSACTION_SERVICE_PORT=3002
INVENTORY_SERVICE_PORT=3003
PAYMENT_SERVICE_PORT=3004
CUSTOMER_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
HELMET_ENABLED=true
TRUST_PROXY=false

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DOCS=true
DEBUG_SQL=false