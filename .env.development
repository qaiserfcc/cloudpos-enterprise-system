# CloudPOS Enterprise System - Master Environment Configuration
# This file documents the port allocation for all services and applications

# =============================================================================
# PORT ALLOCATION SCHEME
# =============================================================================
# 3000: API Gateway (Main entry point)
# 3001: Authentication Service
# 3002: Admin Dashboard (Frontend)
# 3003: Transaction Service
# 3004: Inventory Service
# 3005: Payment Service
# 3006: Customer Service
# 3007: Notification Service
# 3008: Reporting Service
# 3009: [Reserved for future services]
# 3010: POS Terminal App (Future)
# 3011: Customer Portal App (Future)

# =============================================================================
# DEVELOPMENT ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME=CloudPOS Enterprise System
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (Primary Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudpos_db
DB_USER=pos_user
DB_PASSWORD=pos_password

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB (Analytics - Optional)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=cloudpos_analytics

# =============================================================================
# SERVICE DISCOVERY
# =============================================================================
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
TRANSACTION_SERVICE_URL=http://localhost:3003
INVENTORY_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3005
CUSTOMER_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007
REPORTING_SERVICE_URL=http://localhost:3008

# =============================================================================
# FRONTEND APPLICATIONS
# =============================================================================
ADMIN_DASHBOARD_URL=http://localhost:3002
POS_TERMINAL_URL=http://localhost:3010
CUSTOMER_PORTAL_URL=http://localhost:3011

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=cloudpos-super-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=cloudpos-encryption-key-change-in-production

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_DEBUG=true
LOG_LEVEL=debug