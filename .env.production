# Docker Environment Variables for Production
# Copy this file to .env and update with secure production values

# Application Configuration
NODE_ENV=production
API_VERSION=v1

# Database Configuration - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cloudpos_production
POSTGRES_USER=cloudpos_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!
REDIS_DB=0

# MongoDB Configuration
MONGODB_URL=mongodb://admin:CHANGE_THIS_MONGO_PASSWORD_789@mongodb:27017/cloudpos_analytics?authSource=admin
MONGODB_USER=admin
MONGODB_PASSWORD=CHANGE_THIS_MONGO_PASSWORD_789!
MONGODB_DB=cloudpos_analytics

# JWT Configuration - MUST CHANGE THESE IN PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_32_PLUS_CHARACTER_SECRET_KEY_FOR_PRODUCTION
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=12

# Service Ports (internal Docker network)
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
TRANSACTION_SERVICE_PORT=3002
INVENTORY_SERVICE_PORT=3003
PAYMENT_SERVICE_PORT=3004
CUSTOMER_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# Payment Gateway Configuration - PRODUCTION KEYS
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_STRIPE_PUBLISHABLE_KEY
PAYPAL_CLIENT_ID=YOUR_PRODUCTION_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PRODUCTION_PAYPAL_CLIENT_SECRET
PAYPAL_MODE=live

# Email Configuration - Production SMTP
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=YOUR_PRODUCTION_EMAIL_PASSWORD

# SMS Configuration - Production Twilio
TWILIO_ACCOUNT_SID=YOUR_PRODUCTION_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_PRODUCTION_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_PRODUCTION_PHONE_NUMBER

# Logging Configuration
LOG_LEVEL=error
LOG_FORMAT=json

# Rate Limiting - More restrictive for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Security Configuration - Production URLs
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true
TRUST_PROXY=true

# Production Features - Disable development tools
ENABLE_SWAGGER=false
ENABLE_DOCS=false
DEBUG_SQL=false