# API Gateway Environment Template
# Copy this file to .env for local development

PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3002

# Service Discovery - Update these URLs based on your service ports
AUTH_SERVICE_URL=http://localhost:3001
TRANSACTION_SERVICE_URL=http://localhost:3003
INVENTORY_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3005
CUSTOMER_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007
REPORTING_SERVICE_URL=http://localhost:3008

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_jwt_secret_key_here