{
  "name": "@cloudpos/auth-service",
  "version": "1.0.0",
  "description": "Authentication service for Cloud POS system",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist"
  },
  "keywords": ["pos", "auth", "microservice", "express", "typescript"],
  "author": "CloudPOS Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.13.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.3.1",
    "dotenv": "^16.4.5",
    "winston": "^3.13.0",
    "pg": "^8.12.0",
    "redis": "^4.6.14",
    "nodemailer": "^6.9.14",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.4",
    "express-validator": "^7.1.0",
    "uuid": "^10.0.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-facebook": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/nodemailer": "^6.4.15",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-facebook": "^3.0.3",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.5.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "supertest": "^7.0.0",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}