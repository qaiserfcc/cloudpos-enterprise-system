# Notification Service Environment Configuration

# Server Configuration
PORT=3006
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudpos_notifications
DB_USER=postgres
DB_PASSWORD=password

# Email Provider Configuration (Nodemailer SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# AWS SES Configuration (Alternative Email Provider)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
SES_FROM_EMAIL=noreply@yourdomian.com

# SendGrid Configuration (Alternative Email Provider)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SMS Provider Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890

# AWS SNS Configuration (Alternative SMS Provider)
SNS_REGION=us-east-1
SNS_ACCESS_KEY_ID=your-sns-access-key-id
SNS_SECRET_ACCESS_KEY=your-sns-secret-access-key

# Nexmo/Vonage Configuration (Alternative SMS Provider)
NEXMO_API_KEY=your-nexmo-api-key
NEXMO_API_SECRET=your-nexmo-api-secret
NEXMO_FROM_PHONE=12345678901

# Push Notification Configuration (Firebase FCM)
FCM_SERVER_KEY=your-fcm-server-key

# APNS Configuration (Apple Push Notifications)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_KEY=your-apns-private-key

# OneSignal Configuration (Alternative Push Provider)
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# Rate Limiting
EMAIL_RATE_LIMIT=100
SMS_RATE_LIMIT=50
PUSH_RATE_LIMIT=200

# Retry Configuration
DEFAULT_MAX_RETRIES=3
RETRY_BACKOFF_MULTIPLIER=2.0

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/notification-service.log

# Queue Processing
QUEUE_PROCESS_INTERVAL=30000
QUEUE_BATCH_SIZE=100

# Template Configuration
TEMPLATE_CACHE_SIZE=1000
TEMPLATE_CACHE_TTL=3600

# Security
JWT_SECRET=your-jwt-secret
API_KEY=your-api-key