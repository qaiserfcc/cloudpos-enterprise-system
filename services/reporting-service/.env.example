# Reporting Service Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3003
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudpos_reporting
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=30000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3

# External Services
PAYMENT_SERVICE_URL=http://localhost:3001
CUSTOMER_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3004

# Report Generation
REPORT_STORAGE_PATH=./storage/reports
REPORT_CACHE_TTL=3600
MAX_REPORT_SIZE_MB=50
ASYNC_REPORT_THRESHOLD=1000

# Dashboard Configuration
DEFAULT_DASHBOARD_WIDGETS=6
WIDGET_REFRESH_INTERVAL=300
DASHBOARD_CACHE_TTL=1800

# Alert Configuration
ALERT_CHECK_INTERVAL=300
ALERT_BATCH_SIZE=100
ALERT_NOTIFICATION_DELAY=60

# Email Configuration (for report delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=reports@cloudpos.com
SMTP_PASS=your_email_password
EMAIL_FROM=CloudPOS Reports <reports@cloudpos.com>

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRY=24h
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# File Upload
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=csv,xlsx,json

# Timezone
DEFAULT_TIMEZONE=UTC
BUSINESS_TIMEZONE=Asia/Riyadh

# Performance
CACHE_ENABLED=true
COMPRESSION_ENABLED=true
CLUSTER_MODE=false
WORKER_PROCESSES=1