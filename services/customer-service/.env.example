# CloudPOS Customer Service Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3002

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cloudpos_customers
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudpos_customers
DB_USER=postgres
DB_PASSWORD=password
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_SSL=false

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/customer-service.log

# External Services
NOTIFICATION_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3001
ANALYTICS_SERVICE_URL=http://localhost:3004

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@cloudpos.com

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=cloudpos-customer-uploads

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_MARKETING_AUTOMATION=true
ENABLE_DETAILED_LOGGING=true

# Performance Configuration
REQUEST_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000
CACHE_TTL=3600

# Security Configuration
BCRYPT_ROUNDS=12
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9102