{
  "name": "cloudpos-frontend",
  "version": "1.0.0",
  "description": "CloudPOS Frontend Monorepo - Complete user interface solution",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "dev:admin": "npm run dev --workspace=@cloudpos/admin-dashboard",
    "dev:pos": "npm run dev --workspace=@cloudpos/pos-terminal",
    "dev:customer": "npm run dev --workspace=@cloudpos/customer-portal",
    "build": "npm run build --workspaces",
    "build:admin": "npm run build --workspace=@cloudpos/admin-dashboard",
    "build:pos": "npm run build --workspace=@cloudpos/pos-terminal",
    "build:customer": "npm run build --workspace=@cloudpos/customer-portal",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "typecheck": "npm run typecheck --workspaces",
    "storybook": "npm run storybook --workspace=@cloudpos/shared-ui",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "CloudPOS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudpos/frontend.git"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@reduxjs/toolkit": "^2.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "react-redux": "^8.1.3"
  }
}
